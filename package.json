{
  "name": "boilerplate-node-ts",
  "version": "1.0.0",
  "description": "A boilerplate template using node.js, express and TypeScript.",
  "main": "dist/index.js",
  "scripts": {
    "html": "copyfiles --up 1 src/**/*.ejs dist/",
    "build-dev": "./node_modules/.bin/tsc",
    "start-dev": "npm run build-dev && npm run html && node ./dist/index.js",
    "watch-dev": "nodemon -e ts,ejs -w ./src -x npm run start-dev",
    "test": "mocha -r ts-node/register './src/test/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.4",
    "mongodb": "^3.0.7"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/mongodb": "^3.0.15",
    "@types/node": "^8.0.26",
    "@types/sinon": "^2.3.3",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "sinon": "^3.2.1",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tsc": "^1.20150623.0",
    "typescript": "^2.5.2"
  }
}
